<h1>Listing posts</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.user.login, uc_path(post.user) %></td>
    <td><%= post.title.prep.break_long_words %></td>
    <td><%= post.content.prep.break_long_words %></td>
    <td><%= link_to 'Show', post %></td>
    <%if current_user && ( post.user == current_user || ( current_user.role == "admin" || current_user.role == "moderator" ) ) %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
