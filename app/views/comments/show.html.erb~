</p>

<% end %>
<h2>Add a comment:</h2>
  <%= form_for(@comment.comments.build(post: @comment.post)) do |f| %>
    <%= f.hidden_field :post_id %>
    <%= f.hidden_field :comment_id %>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
