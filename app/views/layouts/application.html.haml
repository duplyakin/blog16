!!!
%html
  %head
    %title Blog16
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .sessionInfo
      - if current_user
        = current_user.login
        | #{link_to "Edit profile", edit_user_registration_path} | #{link_to "Sign out", destroy_user_session_path}
      - else
        = link_to "Sign in", new_user_session_path
        | #{link_to "Registration", new_user_registration_path}
    - if current_user && current_user.role == "admin"
      %p
        = link_to "Users", ucs_path
        | #{link_to "User actions", user_actions_path} | #{link_to "Posts", posts_path}   
    = yield
